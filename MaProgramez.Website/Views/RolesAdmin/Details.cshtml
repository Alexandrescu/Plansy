@using MaProgramez.Resources
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h4>@Resource.Details</h4>

        <div class="sablon">
            <table class="table table-striped">
                <tr>
                    <td>@(Resource.Role):</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
            </table></div>
            <hr />
            <h4>@Resource.Role_ListOfUsers</h4>

            @if (ViewBag.UserCount == 0)
            {
                <hr />
                <p>@Resource.NoResults</p>
            }
            else
            {
                <div class="sablon">
                    <table class="table table-striped">

                        @foreach (var item in ViewBag.Users)
                {
                            <tr>
                                <td>
                                    @item.UserName
                                </td>
                            </tr>
                        }
                    </table></div>
                    }
                    <hr />
                    <div class="clear"></div>
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.ActionLink(@Resource.Back, "Index", null, new { @class = "btn btn-link" })
                        </div>
                        <div class="col-sm-10">
                            @Html.ActionLink(@Resource.EditRole, MVC.RolesAdmin.Edit(Model.Id), new { @class = "btn btn-primary float-right" })
                        </div>
                    </div>
                </div>
</div>


