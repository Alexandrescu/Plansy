@model MaProgramez.Website.ViewModels.MailViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = MVC.Shared.Views._MailLayout;
}

@if (Model != null)
{
    <div class="email-content" style="background: #fff; padding: 20px 30px; border-top: 5px solid #18bc9c; -webkit-border-radius: 4px; -moz-border-radius: 4px; -ms-border-radius: 4px; -o-border-radius: 4px; border-radius: 4px; margin-bottom: 10px; margin-left: auto; margin-right: auto; width: 80%; max-width: 800px;">
        <h2 style="font-size: 26px; font-weight: 300; padding-bottom: 20px; border-bottom: 1px solid #ecf0f1; margin-bottom: 20px;">
            @Html.Raw(Model.Title)
        </h2>
        <div class="email-content-text" style="width: 100%;">
            <p style="font-size: 14px; color: #2c3e50;">
                @Html.Raw(Model.Content)
            </p>
        </div>
    </div>
    <div class="email-footer" style="margin-bottom: 20px; margin-left: auto; margin-right: auto; width: 80%; max-width: 800px; color: #5e6c7a;">
        @Html.Raw(Model.Footer)
    </div>
}

