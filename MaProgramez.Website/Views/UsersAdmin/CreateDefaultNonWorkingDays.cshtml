@using MaProgramez.Repository.Entities
@model MaProgramez.Repository.Entities.DefaultNonWorkingDay

@{
    ViewBag.Title = Resource.DefaultNonWorkingDays;
    var list = (List<DefaultNonWorkingDay>)ViewBag.DefaultNonWorkingDays;
}

@section scripts
{
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.input-group.date').datepicker({
                format: "dd-mm-yyyy",
                todayHighlight: true,
                todayBtn: "linked"
            });
        });
    </script>
}

<div class="clear"></div>

<section class="filtre">

    <div class="container">
        <div class="col-lg-3 schedule">

            <h4>@Resource.DefaultNonWorkingDays</h4>
        </div><!-- /.col-lg-3 -->
    </div>
</section>
<div class="up-toticket">
    &nbsp;
</div>
<section class="sectiune-cat stilizat-cat">
    <div class="container stilizat">


        @using (Html.BeginForm("CreateDefaultNonWorkingDays", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger form-validation" role="alert">
                    @Html.ValidationSummary(true, "", new { @class = "text-error" })
                </div>
                <div class="clear"></div>
            }

            <div class="form-group col-md-12">
                <label class="col-md-4 form-label">@Resource.Date<span class="font-danger">&nbsp;*</span></label>
                <div class="col-md-8 input-group date">
                    @Html.TextBoxFor(m => m.StartDateTime, "{0:dd-MM-yyyy}", new { @class = "form-control", @readonly = "true" })
                    <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                </div>
            </div>

            <div class="form-group col-md-12">
                <label class="col-md-4 form-label">@Resource.Description<span class="font-danger">&nbsp;*</span></label>
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-sm" })
                </div>
            </div>

            <div class="clear"></div>
            <hr style="margin: 15px 0" />

            <div class="form-group col-md-12">
                <input type="submit" class="btn buton5long float-right" value="@Resource.Save" />
            </div>
        }

        @if (list != null && list.Any())
        {
            <div class="clear"></div>
            <hr style="margin: 15px 0" />

            var number = 1;

            <div class="sablon">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Resource.Date</th>
                            <th>@Resource.Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var date in list)
                        {
                            <tr>
                                <td>@(number++)</td>
                                <td>@date.StartDateTime.ToString("dd-MM-yyyy")</td>
                                <td>@date.Description</td>
                                <td>
                                    <a href="@Url.Action(MVC.UsersAdmin.DeleteDefaultNonWorkingDay(date.Id))">
                                        <i class="fa fa-trash" data-toggle="tooltip" data-placement="right" title=@Resource.Remove></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>