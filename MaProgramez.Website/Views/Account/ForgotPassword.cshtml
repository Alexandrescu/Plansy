@using MaProgramez.Resources
@model MaProgramez.Website.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = Resource.ForgotPasswordView_Title;
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="login-container" style="width: 400px;">
    <div class="login-section">
        <div class="row">
            <div class="col-md-12" style="">
                <div class="form-horizontal">
                    @using (Html.BeginForm(MVC.Account.ForgotPassword(), FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>@Resource.ForgotPasswordView_Title2</h4>
                        <span style="font-size: 14px; color: #65717f;">@Resource.ForgotPassword_Message</span>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-danger" value="@Resource.ForgotPasswordView_ButonText" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
